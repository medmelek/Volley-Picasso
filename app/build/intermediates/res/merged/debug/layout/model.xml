<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">
<LinearLayout
    android:layout_width="match_parent"
    android:background="#9206a0ca"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


<RelativeLayout
    android:layout_width="wrap_content"

    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/valeurtmp"
        android:textColor="#e6095a"
        android:textSize="18dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/datetmp"
        android:textColor="#e65609"
        android:layout_below="@+id/valeurtmp"
        android:textSize="18dp"
        android:layout_height="wrap_content" />


</RelativeLayout>
    <ImageView
        android:layout_width="55dp"
        android:id="@+id/imagetmp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/datetmp"
        android:layout_height="55dp" />
</LinearLayout>

</LinearLayout>